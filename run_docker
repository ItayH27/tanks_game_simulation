docker run -it --rm \
    -v $(pwd):/workspace \
    tanks-ubuntu2204:latest \
    /bin/bash

cmake -S . -B build && cmake --build build -j

./simulator_209277367_322542887 -comparative game_map=1_maps/valid_input_complex.txt \
  game_managers_folder=1_gm_so \
  algorithm1=1_algo_so/Algorithm_209277367_322542887.so \
  algorithm2=1_algo_so/Algorithm_209277367_322542887.so \
  num_threads=4 -verbose

./simulator_209277367_322542887 -competition \
    game_maps_folder=1_maps \
    game_manager=1_gm_so/GameManager_test_209277367_322542887.so \
    algorithms_folder=1_algo_so \
    num_threads=4 -verbose

